@model MVCBlog.Models.ViewModels.DataViewModel

@{
    ViewData["Title"] = "Index";
}
<table class="table">
    <h2>Posts</h2>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].PageTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].FeaturedImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].UrlHandle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].Visible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].PublishedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].Author)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Posts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Heading)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PageTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeaturedImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UrlHandle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <a asp-action="DeletePost" asp-route-id="@item.Id">Delete Post</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="AddPost">Add New Post</a>
</p>
<table class="table">
    <h2>Tags</h2>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tags[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags[0].DisplayName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tags)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    <a asp-action="DeleteTag" asp-route-id="@item.Id">Delete Tag</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="AddTag">Add New Tag</a>
</p>